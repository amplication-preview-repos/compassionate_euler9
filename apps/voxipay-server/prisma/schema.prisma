datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cryptocurrency {
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  name         String?
  symbolField  String?
  transactions Transaction[]
  updatedAt    DateTime      @updatedAt
  wallets      Wallet[]
}

model Wallet {
  address          String?
  balance          Float?
  createdAt        DateTime        @default(now())
  cryptocurrency   Cryptocurrency? @relation(fields: [cryptocurrencyId], references: [id])
  cryptocurrencyId String?
  fromWallet       String?
  id               String          @id @default(cuid())
  toWallet         String?
  updatedAt        DateTime        @updatedAt
  user             User?           @relation(fields: [userId], references: [id])
  userId           String?
}

model Transaction {
  amount              Float?
  createdAt           DateTime                        @default(now())
  cryptocurrency      Cryptocurrency?                 @relation(fields: [cryptocurrencyId], references: [id])
  cryptocurrencyId    String?
  fromWallet          String?
  fromWalletId        String?
  fromWalletReference String?
  id                  String                          @id @default(cuid())
  status              EnumTransactionStatus?
  timestamp           DateTime?
  toWallet            String?
  toWalletId          String?
  toWalletReference   String?
  transactionType     EnumTransactionTransactionType?
  typeField           EnumTransactionTypeField?
  updatedAt           DateTime                        @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
  wallets   Wallet[]
}

model Commission {
  coin       String?
  commission Float?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  updatedAt  DateTime @updatedAt
}

enum EnumTransactionStatus {
  Option1
}

enum EnumTransactionTransactionType {
  Option1
}

enum EnumTransactionTypeField {
  Option1
}
